<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhongger.zchat.mapper.UserAvatarMapper">
    <insert id="insert" parameterType="com.zhongger.zchat.entity.UserAvatar">
    insert into userAvatar(id,image,user_id,image_name) values (#{id},#{file},#{user_id},#{image_name})
    </insert>
    <resultMap id="sele" type="com.zhongger.zchat.entity.UserAvatar">
        <result column="image" property="file"></result>
        <result column="image_name" property="image_name"></result>
    </resultMap>
    <select id="selectforuser" resultMap="sele">
        select image,image_name from  userAvatar where user_id=#{user_id}
    </select>
    <update id="updateforuser" parameterType="com.zhongger.zchat.entity.UserAvatar">
        update userAvatar set image=#{file},image_name=#{image_name} where user_id=#{user_id}
    </update>
</mapper>