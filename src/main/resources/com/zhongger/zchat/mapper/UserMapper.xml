<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhongger.zchat.mapper.UserMapper">
  <resultMap id="BaseResultMap" type="com.zhongger.zchat.pojo.User">
    <result column="user_id" jdbcType="INTEGER" property="userId" />
    <result column="user_name" jdbcType="VARCHAR" property="userName" />
    <result column="password" jdbcType="VARCHAR" property="password" />
    <result column="phone" jdbcType="VARCHAR" property="phone" />
  </resultMap>
  <insert id="insert" parameterType="com.zhongger.zchat.pojo.User">
    insert into user (user_id, user_name, password, 
      phone)
    values (#{userId,jdbcType=INTEGER}, #{userName,jdbcType=VARCHAR}, #{password,jdbcType=VARCHAR}, 
      #{phone,jdbcType=VARCHAR})
  </insert>
  <select id="selectAll" resultMap="BaseResultMap">
    select user_id, user_name, password, phone
    from user
  </select>
  <select id="selectForUsername" resultType="string">
    select  password
    from user where user_name=#{userName}
  </select>
  <select id="selectForUphone" resultType="string">
    select  password
    from user where phone=#{phone}
  </select>

</mapper>