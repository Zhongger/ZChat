<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhongger.zchat.mapper.UserMapper">
  <resultMap id="BaseResultMap" type="com.zhongger.zchat.entity.Userforleili">
    <result column="user_id" jdbcType="INTEGER" property="userId" />
    <result column="user_name" jdbcType="VARCHAR" property="userName" />
    <result column="password" jdbcType="VARCHAR" property="password" />
    <result column="phone" jdbcType="VARCHAR" property="phone" />
  </resultMap>
  <insert id="insert" parameterType="com.zhongger.zchat.entity.Userforleili">
    insert into user (user_id, user_name, password, 
      phone)
    values (#{userId,jdbcType=INTEGER}, #{userName,jdbcType=VARCHAR}, #{password,jdbcType=VARCHAR}, 
      #{phone,jdbcType=VARCHAR})
  </insert>
  <select id="selectAll" resultMap="BaseResultMap">
    select user_id, user_name, password, phone
    from user
  </select>

  <select id="select" resultType="string">
    select  password
    from user
    <trim prefix="where" prefixOverrides="and" suffixOverrides="and">
      <if test="userName!=null">
        user_name=#{userName} and
      </if>
      <if test="phone!=null">
        phone=#{phone} and
      </if>
    </trim>
  </select>

  
  <delete id="delete" parameterType="com.zhongger.zchat.entity.Userforleili">
    delete from user
    <trim prefix="where" prefixOverrides="and" suffixOverrides="and">
        <if test="userName!=null">
        user_name=#{userName} and
        </if>
        <if test="phone!=null">
        phone=#{phone} and
         </if>
    </trim>
  </delete>

</mapper>