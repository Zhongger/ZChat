<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhongger.zchat.mapper.UserMapper">
  <resultMap id="BaseResultMap" type="com.zhongger.zchat.entity.Userforleili">
    <result column="user_id" jdbcType="INTEGER" property="userId" />
    <result column="user_name" jdbcType="VARCHAR" property="userName" />
    <result column="password" jdbcType="VARCHAR" property="password" />
    <result column="phone" jdbcType="VARCHAR" property="phone" />
      <result column="staus" property="staus"></result>
  </resultMap>
  <insert id="insert" parameterType="com.zhongger.zchat.entity.Userforleili">
    insert into user (user_id, user_name, password, 
      phone)
    values (#{userId,jdbcType=INTEGER}, #{userName,jdbcType=VARCHAR}, #{password,jdbcType=VARCHAR}, 
      #{phone,jdbcType=VARCHAR})
  </insert>
  <select id="selectAll" resultMap="BaseResultMap">
    select user_id, user_name, password, phone,staus
    from user where user_name=#{userName} or phone=#{username}
  </select>

  <select id="select" resultType="string">
    select  password
    from user
    <trim prefix="where" prefixOverrides="and" suffixOverrides="and">
      <if test="userName!=null">
        user_name=#{userName} and
      </if>
      <if test="phone!=null">
        phone=#{phone} and
      </if>
    </trim>
  </select>

  
  <delete id="delete" parameterType="com.zhongger.zchat.entity.Userforleili">
    delete from user
    <trim prefix="where" prefixOverrides="and" suffixOverrides="and">
        <if test="userName!=null">
        user_name=#{userName} and
        </if>
        <if test="phone!=null">
        phone=#{phone} and
         </if>
    </trim>
  </delete>

  <update id="update" parameterType="com.zhongger.zchat.PO.UserRevise">
    update user
<trim prefix="set" prefixOverrides="," suffixOverrides=",">
  <if test="username!=null">
    user_name=#{username},
  </if>
  <if test="password!=null">
    password=#{password},
  </if>
<if test="phone!=null">
   phone=#{phone},
</if>
</trim>
    where
    <if test="old_username!=null">
      user_name=#{old_username}
    </if>
    <if test="old_phone!=null">
      phone=#{old_phone}
    </if>
  </update>
    <resultMap id="selectuse" type="com.zhongger.zchat.DTO.UserInfoData">
        <result column="image" property="data"></result>
        <result column="image_name" property="image_name"></result>
        <result column="user_id" property="userId"></result>
        <result column="user_name" property="userName"></result>
        <result column="phone" property="phone"></result>

    </resultMap>
    <select id="selectuser" resultMap="selectuse">
        select b.image,b.image_name,a.user_id,a.user_name,a.phone from user a,userAvatar b where a.user_id=b.user_id and
        <trim prefixOverrides="," suffixOverrides=",">
            <if test="userName!=null">
                a.user_name=#{userName}
            </if>
            <if test="phone!=null">
                a.phone=#{phone}
            </if>
        </trim>
    </select>
    <update id="updateforstaus" parameterType="com.zhongger.zchat.entity.Userforleili">
        update user set staus=#{staus} where user_name=#{userName} or phone=#{userName}
    </update>
</mapper>